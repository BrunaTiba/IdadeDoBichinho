<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".CatActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/bola" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Digite a idade do seu cachorro, para descobrir a idade dele em anos humanos"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/titulo" />

        <EditText
            android:id="@+id/caixaDeTextoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/botaoIdadeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descobrirIdade" />

        <TextView
            android:id="@+id/resultadoIdadeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/titulo" />

        <Button
            android:id="@+id/botao_voltarDog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="irTelaPrincipal"
            android:text="@string/voltar" />




    </LinearLayout>

</android.support.constraint.ConstraintLayout>