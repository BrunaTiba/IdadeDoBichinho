<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patas"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Qual a idade do seu bichinho?"
            android:textAllCaps="false"
            android:textColor="@color/corTitulo"
            android:textSize="@dimen/titulo"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDog"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="irTelaDog"
                app:srcCompat="@drawable/ajudante" />

            <ImageView
                android:id="@+id/imgCat"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="irTelaCat"
                app:srcCompat="@drawable/bola" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>